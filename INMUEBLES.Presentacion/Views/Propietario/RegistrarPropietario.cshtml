@model INMUEBLES.Entidades.PropietarioE

@{
    ViewBag.Title = "RegistrarPropietario";
    Layout = "~/Views/Layout/_LayoutInicio.cshtml";

    var lstDocumentos = ViewBag.ListaDocumento;
}


<div id="miModal" class="modal">
    <div class="modal-contenido">
        <div aligh="right"><a href="/Publicacion/Inicio"><img src="~/Iconos/Cerrar.png" width="30" /></a></div>
        <div class="titulo">Registrar Propietario</div>
        <table class="tablaRegistrar">
            @using (Html.BeginForm("Insertar", "Propietario", FormMethod.Post))
            {
                <tr>
                    <td>Nombres: </td>
                    <td><input type="text" name="txtNombres" placeholder="Nombres" /></td>
                </tr>
                <tr>
                    <td>Ape. Paterno: </td>
                    <td><input type="text" name="txtApellidoP" placeholder="Apellido Paterno" /></td>
                </tr>
                <tr>
                    <td>Ape.Materno: </td>
                    <td><input type="text" name="txtApellidoM" placeholder="Apellido Materno" /></td>
                </tr>
                <tr>
                    <td>Celular: </td>
                    <td><input type="text" name="txtCelular" placeholder="Celular" /></td>
                </tr>
                <tr>
                    <td>Telefono: </td>
                    <td><input type="text" name="txtTelefono" placeholder="Telefono" /></td>
                </tr>
                <tr>
                    <td>Documento: </td>
                    <td>
                        <select name="cboDocumento">
                            @foreach (var item in lstDocumentos)
                {
                                <option value="@item.idDocumento">@item.descripcionCorta</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Nº: </td>
                    <td><input type="text" name="txtNroDocumento" placeholder="Nº Documento" /></td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><input type="text" name="txtEmail" placeholder="Email" /></td>
                </tr>
                <tr>
                    <td>Contraseña: </td>
                    <td><input type="password" name="txtContraseña" placeholder="Contraseña" /></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><button type="submit">Registrar</button></td>
                </tr>
            }

        </table>

        <div class="clickAqui"><a href="/Loguear#miModal">Ingresa aqui</a></div>
    </div>
</div>